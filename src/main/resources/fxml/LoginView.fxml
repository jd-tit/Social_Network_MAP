<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.escript.user_interface.gui.controller.Login">

    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
        <Label style="-fx-font-size: 20; -fx-font-family: Roboto" text="SocNetMAP">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin></Label>

        <Label text="Username">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></Label>
        <TextField fx:id="usernameInput" promptText="Your username">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></TextField>

        <Label text="Password">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin></Label>
        <PasswordField fx:id="passwordInput" promptText="Your password">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></PasswordField>

        <Button onAction="#submitLogin" text="Login">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin></Button>

        <Text text="Don't have an account?">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin></Text>
        <Hyperlink onAction="#createAccount" text="Create an one instead">
            <VBox.margin>
                <Insets />
            </VBox.margin></Hyperlink>
        <padding>
            <Insets left="50.0" right="50.0" />
        </padding>
    </VBox>

</AnchorPane>
